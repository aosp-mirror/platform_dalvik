script=$0
cd `dirname $script`
script=`basename $script`

while [ -L "$script" ]
do
    script=`readlink $script`
    cd `dirname $script`
    script=`basename $script`
done

DED_DIR=`pwd -P`

DED=$DED_DIR/dare-launcher-1.0.2
SOOT_DIR="$DED_DIR/../../../../dalvik/dare/soot/lib"
JASMIN_DIR="$DED_DIR/../../../../dalvik/dare/jasmin/lib"
ANDROID_LIBS="$DED_DIR/../../../../dalvik/dare/libs/class"
PREVERIFY_SCRIPT="$DED_DIR/../../../../dalvik/tools/dex-preopt"
PREVERIFY=""

while getopts ed:ocpb p
do
	case "$p" in
	p)	PREVERIFY="-p $PREVERIFY_SCRIPT";;
	[?])	echo "Usage: $0 [-d <output directory] [-o] [-c] <dex/apk file>"
		echo "  -o : optimize .class files with Soot"
		echo "  -c : optimize and decompile .class files with Soot"
		echo "  -p : preverify classes using the Dalvik verifier and rewrite unverifiable classes"
		echo "  -e : do not split exception tables"
		echo "  -b : generate stubs for some missing classes"
		exit 1;;
	esac
done

SOOT=$SOOT_DIR/soot-2.5.0.jar
JASMIN=$JASMIN_DIR/jasminclasses-2.5.0.jar
LIBS="`find $ANDROID_LIBS -type f -name '*.jar' | tr '\n' ':'`$CLASSPATH"

ARGS=`echo " $@" | sed 's/ -p/ /g'`
$DED -s $SOOT -a $LIBS -j $JASMIN -r $DED_DIR/dare-1.0.2 $PREVERIFY $ARGS

